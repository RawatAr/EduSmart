# EDUSMART LMS - Environment Configuration Template
# Copy this file to .env and fill in your values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edusmart
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# For MySQL, use:
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=edusmart

# ==========================================
# JWT CONFIGURATION
# ==========================================
# Generate a secure random key (min 256 bits)
# Use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_minimum_256_bits_required_here
JWT_EXPIRATION=86400000
# 86400000 ms = 24 hours

# ==========================================
# EMAIL CONFIGURATION (Gmail example)
# ==========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=noreply@edusmart.com

# For Gmail:
# 1. Enable 2-Factor Authentication
# 2. Generate App Password
# 3. Use App Password here

# ==========================================
# AWS S3 CONFIGURATION (Optional)
# ==========================================
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key

# ==========================================
# FILE STORAGE CONFIGURATION
# ==========================================
FILE_UPLOAD_DIR=uploads
FILE_MAX_SIZE=104857600
# 104857600 bytes = 100MB
FILE_STORAGE_TYPE=local
# Options: local, s3

# ==========================================
# REDIS CONFIGURATION (Required for Caching)
# ==========================================
# Install Redis: 
# - Windows: Download from https://redis.io/download or use WSL
# - Linux: sudo apt-get install redis-server
# - Mac: brew install redis
# Start Redis: redis-server
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# Leave empty if no password

# ==========================================
# WEBSOCKET CONFIGURATION
# ==========================================
# WebSocket is configured for real-time features
# Default endpoints: /ws (with SockJS), /ws-native
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
APP_NAME=EduSmart
APP_URL=http://localhost:8080
APP_PORT=8080

# ==========================================
# ENVIRONMENT
# ==========================================
SPRING_PROFILES_ACTIVE=dev
# Options: dev, prod, test

# ==========================================
# CORS CONFIGURATION
# ==========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
# Add your frontend URLs

# ==========================================
# PAYMENT GATEWAY (Future Integration)
# ==========================================
STRIPE_API_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
# Options: TRACE, DEBUG, INFO, WARN, ERROR

# ==========================================
# MONITORING (Optional)
# ==========================================
ACTUATOR_ENABLED=true
ACTUATOR_PORT=8081

# ==========================================
# SECURITY
# ==========================================
# Enable/disable security features
CSRF_ENABLED=true
CORS_ENABLED=true

# ==========================================
# NOTES
# ==========================================
# - Never commit .env file to version control
# - Add .env to .gitignore
# - Use strong passwords and keys
# - Rotate credentials regularly
# - Use environment-specific values
